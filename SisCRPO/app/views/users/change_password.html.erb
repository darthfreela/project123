    <section class="content-header">
    <h1>
        Trocar Senha
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Trocar senha</li>
    </ol>
</section>
<section class="content">
    <div class="box ">
        <div class="box-header">
            <h3 class="box-title">Trocar senha</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                  <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="alert-error">
            <%= flash[:error] %>
          <% if @user.errors.any? %>

            <div id="error_explanation">
                O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
            </div>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
          <% end %>
        </div>
    <%= form_for @user, :html =>{id:'teste'} do |f| %>
                <div class="box-body">
                    <div class="form-group col-md-2">
                        <label>Id Funcional</label>
                        <%= f.text_field :id_func, PlaceHolder: "Id Funcional", maxlength: "80", class:"form-control", data: {
          :validation => "required",
          :suggestions => "clovis, fachinello soares",
          "validation-error-msg" => "Este campo é obrigatorio." } %>
                    </div>

                    <div class="form-group col-md-7">
                        <label>Endereço</label>
                        <%= f.text_field :address, PlaceHolder: "Endereço. Ex: 'Rua ....'", class:"form-control" %>
                    </div>
                    <div class="form-group col-md-3">
                        <label>Bairro</label>
                        <%= f.text_field :neighborhood, PlaceHolder: "Bairro", class:"form-control" %>
                    </div>

                <div class="box-footer">
                    <%= f.submit "Salvar", Class: "btn btn-success" %>
                    <%= f.button "Limpar", Class: "btn btn-danger" %>
                </div>
            <% end %>
 </div>