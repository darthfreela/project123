<section class="content-header">
  <h1>
    Aprovação de solicitações
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Aprovação de solicitações</li>
  </ol>
</section>
<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Listagem de solicitações pendentes
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <div class="input-group margin">
        <input class="form-control" type="text" placeholder="Pesquisar">
          <span class="input-group-btn">
            <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
          </span>
      </div>
      <% if @approval_solicitations.count < 1 %>
          Não existem solicitações pendentes.
      <% else %>
        <table id="motivos" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Id Func.</th>
              <th>Nome do Servidor</th>
              <th>Posto Grad.</th>
              <th>Função Exercida</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @approval_solicitations.each do |e|%>
              <tr>
                <td><%= e.id %></td>
                <td><%= e.user.id %></td>
                <td><%= e.user.name %></td>
                <td><%= e.user.post_graduation.initials%></td>
                <td><%= e.user.function.name %></td>
                <td>
                  <%= link_to raw("<i class='fa fa-check-square-o  '>Visualizar</i>"),
                  {:controller => 'approval_solicitation', :action => 'edit',
                  :id => e.id}, class: 'btn btn-success', method: :get %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</section>
