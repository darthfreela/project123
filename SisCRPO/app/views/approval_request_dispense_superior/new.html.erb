<section class="content-header">
              <h1>
                Aprovação das solicitações de dispensa (Superior)
              </h1>
              <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Aprovação das solicitações de dispensa (Superior)</li>
              </ol>
</section>
<section class="content">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Listagem de aprovações pendentes
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="input-group margin">
                            <input class="form-control" type="text" placeholder="Pesquisar">
                                <span class="input-group-btn">
                                <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                                </span>
                        </div>
                        <% if @request_dispenses.count < 1 %>
            <tr><td>Não existem solicitações pendentes.</td></tr>
            <% else %>
                        <table id="motivos" class="table table-bordered table-striped">
                            <thead>
                                    <tr>
                                        <th></th>
                                        <th>Id Func.</th>
                                        <th>Nome do Servidor</th>
                                        <th>Posto Grad.</th>
                                        <th>Função Exercida</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            <tbody>
                            <% @request_dispenses.each do |e|%>
                                <tr>
                                    <td><%= e.id %></td>
                                    <td><%= e.data_inicio %></td>
                                    <td><%= e.data_fim %></td>
                                    <td><%= e.user.name %></td>
                                    <td><%= e.updated_at %></td>
                                    <td><%= link_to raw("<i class='fa fa-check-square-o  '>Visualizar</i>"),
                                      {:controller => 'approval_request_dispense_superior', :action => 'edit', :id => e.id},
                                      class: 'btn btn-success', method: :get %>
                                    </td>
                                </tr>
                               <% end %>
                            </tbody>
                        </table>
                        <% end %>
                    </div>
                </div>
            </section>
