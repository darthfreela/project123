<section class="content">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Aprovação da dispensa(Superior)</h3>
    </div>
    <div class="error"><%= flash[:error] %></div>
    <% if @request_dispense.errors.any? %>
    <div id="error_explanation">
    <div class="alert-error">
        O formulário contém <%= pluralize(@request_dispense.errors.count, "erro") %>.
    </div>
    <ul>
      <% @request_dispense.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
    <% end %>
    <%= form_for @request_dispense do |l| %>
      <div class="box-body">
        <div class="form-group col-md-12">
          <div class="form-group col-md-4">
            <label>Id Func</label>
            <%= l.text_field :user_id, disabled:"true", class:"form-control autocompleteFunc" %>
          </div>
          <div class="form-group col-md-4">
            <label>Nome do servidor</label>
            <%= l.text_field :user ,value:@request_dispense.user.name, disabled:"true", class:"form-control autocompleteFunc" %>
          </div>
          <div class="form-group col-md-4">
            <label>Posto graduação</label>
            <%= l.text_field :user,value:@request_dispense.user.postograduacao.sigla, disabled:"true", class:"form-control autocompleteFunc" %>
          </div>
          <div class="form-group col-md-4">
            <label>Motivo da indisponibilidade</label>
            <%= l.text_area :solicitacao, disabled:"true", class:"form-control autocompleteFunc" %>
          </div>
          <div class="form-group col-md-4">
            <label>Função Exercida</label>
            <%= l.text_field :user,value:@request_dispense.user.function.funcao, disabled:"true", class:"form-control autocompleteFunc" %>
          </div>

          <div class="form-group col-md-2">
              <label>Data Inicial*</label>
               <%= l.date_field :data_inicio, class:"form-control data" %>
          </div>
          <div class="form-group col-md-2">
              <label>Data Final*</label>
              <%= l.date_field :data_fim, class:"form-control data" %>
          </div>
        </div>
      </div>

      <div class="box-footer">
        <%= link_to raw("<i class='fa fa-check-square-o  '> Permitir</i>"),
          {:controller => 'approval_request_dispense_superior',
            :action => 'approve', :id => @request_dispense.id},
            :data => {:confirm => "Realmente deseja aprovar o registro ?"},
            class: 'btn btn-success', method: :get %>
        <%= link_to raw("<i class='fa fa-close'> Negar</i>"),
          {:controller => 'approval_request_dispense_superior',
            :action => 'reprove', :id => @request_dispense.id},
            :data => {:confirm => "Realmente deseja negar o registro ?"},
           class: 'btn btn-danger', method: :get %>
        <div class=" small pull-right">* Campos obrigatórios</div>
      </div>

    <% end %>
  </div>
</section>
