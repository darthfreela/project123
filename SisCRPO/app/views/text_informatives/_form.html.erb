<div class="alert-error">
  <%= flash[:error] %>
  <% if @text_informative.errors.any? %>
    <div id="error_explanation">
      <div class="alert-error">
        O formulário contém <%= pluralize(@text_informative.errors.count, "erro") %>.
      </div>
      <ul>
        <% @text_informative.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<%= form_for @text_informative do |f| %>
  <div class="box-body">
    <div class="col-md-12">
      <div class="form-group col-md-6">
        <label>Tipo *</label>        
           <%= f.select :type_informative, [
                ['Selecionar',''], 
                ['Afastamento','Afastamento'], 
                ['Licenças(todas)','Licenças(todas)'],
                ['Substituições','Substituições'], 
                ['Transferências','Transferências'],
                ['Movimentação sanitária','Movimentação sanitária'], 
                ['Entrega de Uniformes','Entrega de Uniformes'], 
                ['Ação e contenção','Ação e contenção'], 
                ['Operações que participou','Operações que participou'], 
                ['Diversas', 'Diversas']
              ],{},
                class: "form-control select2" , 
                          data: {
                              :validation => "required",
                              "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
    </div>
    <div class="col-md-12">                                    
      <div class="form-group col-md-6">
        <label>Descrição *</label>                    
        <%= f.text_area :description, maxlength: "255", class:"form-control" , 
                          data: {
                              :validation => "required",
                              "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <%= f.submit "Salvar", class: "btn btn-success" %>
     <% if @botao == 'edit' %>
          <a href="javascript:history.back()" class="btn btn-danger">Voltar</a>
        <% else %>
          <input name="limpar" value="Limpar" class="btn btn-danger" type="reset">
        <% end %>
        <div class=" small pull-right">* Campos obrigatórios</div>
  </div>
<%end%>