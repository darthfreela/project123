<section class="content-header">
    <h1>
        Distribuir Horas Extras
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Distribuir Horas Extras</li>
    </ol>
</section>

<section class="content">
  <div class="box collapsed-box">
      <div class="box-header">
        <h3 class="box-title">Cadastro de Distribuição de Horas Extras</h3>
          <div class="box-tools pull-right">
              <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
          </div>
      </div>
      <hr>

      <!--INICIO form-->
        <%= render 'form' %>
      <!--FIM form-->

  </div>

  <div class="box">
      <div class="box-header">
          <h3 class="box-title">Listar Distribuições de Hora Extra</h3>
          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
              <i class="fa fa-minus"></i>
            </button>
          </div>
      </div>
      <div class="box-body">
          <div class="input-group input-group-sm">
              <input type="text" class="form-control">
              <span class="input-group-btn">
                  <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
              </span>
          </div>
      </div>
      <hr>

      <!-- /.box-header -->
      <div class="box-body">
        <% if @extra_hour_distribution_show.count <= 0 %>
          Não existem distribuições de horas extras cadastradas.
        <% else %>
          <table id="motivos" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th></th>
                <th>GPM</th>
                <th>Número de Horas</th>
                <th>Data inicial</th>
                <th>Data final</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @extra_hour_distribution_show.each do |o|%>
                <tr>
                    <td><%= o.id %></td>
                    <td><%= o.gpm.name %></td>
                    <td><%= o.how_many_hours %></td>
                    <td><%= data_br o.date_begin %></td>
                    <td><%= data_br o.date_end %></td>
                    <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"),
                     {:controller => 'extra_hour_distributions',
                      :action => 'edit', :id => o.id}, class: 'btn btn-warning',
                       method: :get %>
                     </td>
                    <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"),
                      {:controller => 'extra_hour_distributions',
                      :action => 'destroy', :id => o.id},
                      :data => {:confirm => "Realmente deseja excluir este registro?"},
                      class: 'btn btn-danger', method: :delete %>
                    </td>
                    </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    <div class="box-footer"></div>
  </div>
</section>
