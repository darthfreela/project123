<section class="content-header">
  <h1>
      Gerenciamento de Texto Informativo
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">Ferramentas do usuário</a></li>
    <li class="active">Gerenciamento de Texto Informativo</li>
  </ol>
</section>
<section class="content">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Cadastro Textos Informativos</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
        </div>
      </div>
      <hr>
      <div class="alert-error">
        <%= flash[:error] %>
        <% if @informative_text.errors.any? %>
          <div id="error_explanation">
            <div class="alert-error">
              O formulário contém <%= pluralize(@informative_text.errors.count, "erro") %>.
            </div>
            <ul>
              <% @informative_text.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <!-- form start -->
      <%= render 'form' %>
    </div>
</section>