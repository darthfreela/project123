<section class="content-header">
    <h1>Gerenciamento Textos Informativos
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Textos Informativos</li>
    </ol>
</section>
<section class="content">
    <div class="box collapsed-box">
      <div class="box-header">
        <h3 class="box-title">Cadastro Textos Informativos</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
        </div>
      </div>
      <hr>
      <div class="alert-error">
        <%= flash[:error] %>
        <% if @informative_text.errors.any? %>
          <div id="error_explanation">
            <div class="alert-error">
              O formulário contém <%= pluralize(@informative_text.errors.count, "erro") %>.
            </div>
            <ul>
              <% @informative_text.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <!-- form start -->
      <%= render 'form' %>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Listar Textos Informativos</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                </span>
            </div>
        </div>
        <hr>
        <div class="box-body">
          <% if @informative_text_show.count < 1 %>
            Não existem Textos Informativos cadastrados.
          <% else %>         
            <table id="motivos" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Tipo</th>
                  <th>Descrição</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @informative_text_show.each do |i|%>
                  <tr>
                    <td><%= i.id%></td>
                    <td><%= i.type_info %></td>
                    <td><%= i.description %></td>
                    <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"),
                         {:controller => 'informative_text_daily_bulletins', :action => 'edit', :id => i.id},
                          class: 'btn btn-warning', method: :get %>
                    </td>
                    <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"),
                     {:controller => 'informative_text_daily_bulletins', :action => 'destroy', :id => i.id},
                      :data => {:confirm => "Realmente deseja excluir este registro?"},
                       class: 'btn btn-danger', method: :delete %>
                     </td>
                  </tr>
                <% end %>
              </tbody>                  
            </table>
          <% end %>
        </div>
        <div class="box-footer">
        </div>
    </div>
</section>
