<section class="content-header">
	<h1>
		Substituição Temporaria
	</h1>
	<ol class="breadcrumb">
		<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
		<li><a href="#">Ferramentas do usuário</a></li>
		<li class="active">Substituição Temporaria</li>
	</ol>
</section>
<section class="content">
	<div class="box box-default">
		<div class="box-header with-border">
			<h3 class="box-title">Realizar Substituição Temporária</h3>
			<div class="box-tools pull-right">
				<button type="button" class="btn btn-box-tool" data-widget="collapse">
					<i class="fa fa-minus"></i>
				</button>
			</div>
		</div>
		<div class="alert-error">
            <%= flash[:error] %>
            <% if @tempReplacement.errors.any? %>
                <div id="error_explanation">
                    O formulário contém <%= pluralize(@tempReplacement.errors.count, "erro") %>.
                </div>
                <ul>
                    <% @tempReplacement.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
		<%= form_for @tempReplacement do |f| %>
			<div class="box-body">
				<div class="form-group col-md-3">
					<label>ID Func. Substituido</label>
					<%= f.text_field :idFuncOcupante, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-5">
					<label>Nome do Servidor Substituido</label>	
					<%= f.text_field :nomeOcupante, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-2">
					<label>Posto Grad.</label>
					<%= f.text_field :idGraduacaoOcupante, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-2">
					<label>Função</label>
					<%= f.text_field :idFuncaoOcupante, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-3">
					<label>ID Func. Substituto</label>
					<%= f.text_field :idFuncSubstituto, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-5">
					<label>Nome do Servidor Substituto</label>
					<%= f.text_field :nomeSubstituto, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-2">
					<label>Posto Grad.</label>
					<%= f.text_field :idGraduacaoSubstituto, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-2">
					<label>Função</label>
					<%= f.text_field :idFuncaoSubstituto, maxlength: "14", class:"form-control" %>
				</div>
				<div class="form-group col-md-2">
					<label>Nrº Boletim</label>
					<%= f.text_field :idBoletim, PlaceHolder: "Nrº Boletim", maxlength: "80", class:"form-control" %>
				</div>
				<div class="form-group col-md-12">
					<label>Motivo de Indisponibilidade</label>
					<%= f.text_area :motivoIndisponibilidade, PlaceHolder: "Motivo de Indisponibilidade", maxlength: "80", class:"form-control" %>
				</div>
				<div class="form-group col-md-6">					
					<label>Período</label>
					<div class="row">	
						<div class="col-md-4">					
							<%= f.text_field :dataAssuncao, class:"form-control"%>
						</div>
						<div class="col-md-1">					
							à
						</div>
						<div class="col-md-4">					
							<%= f.text_field :dataDispensa, class:"form-control data"%>	
						</div>							
					</div>
				</div>
			</div>
			<div class="box-footer">
                <%= f.submit "Salvar", class: "btn btn-success"%>
                <%= f.button "Cancelar", class: "btn btn-danger"%>
            </div>
		<% end %>
	</div>
</section>