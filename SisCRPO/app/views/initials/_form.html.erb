<div class="alert-error">
    <%= flash[:error] %>
    <% if @initial.errors.any? %>
        <div id="error_explanation">
            O formulário contém <%= pluralize(@initial.errors.count, "erro") %>.
        </div>
        <ul>
            <% @initial.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
</div>
<%= form_for @initial do |f| %>
    <div class="box-body">
        <div class="col-md-2 form-group ">
            <label>Sigla *</label>
            <%= f.text_field :initial, PlaceHolder: "Sigla", maxlength: "5", class:"form-control" %>
        </div>
        <div class="col-md-8 form-group ">
            <label>Nome *</label>
            <%= f.text_field :name, PlaceHolder: "Nome", maxlength: "80", class:"form-control" %>
        </div>
    </div>
    <div class="box-footer">
        <%= f.submit "Salvar", class: "btn btn-success"%>
        <% if @botao == 'edit' %>
          <a href="javascript:history.back()" class="btn btn-danger">Voltar</a>
        <% else %>
          <input name="limpar" value="Limpar" class="btn btn-danger" type="reset">
        <% end %>
        <div class=" small pull-right">* Campos obrigatórios</div>
    </div>
<% end %>