<section class="content-header">
    <h1>Gerenciamento de Siglas
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Gerenciamento de Siglas</li>
    </ol>
</section>
<section class="content">
    <div class="box box-default collapsed-box">
        <div class="box-header with-border">
            <h3 class="box-title">Cadastro Siglas</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <%= render "form" %>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Listar Siglas</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                </span>
            </div>
        </div>
        <hr>
        <div class="box-body">
            <% if @initial_show.count < 1%>
                Não existem siglas cadastradas.
            <% else %>
                <table id="motivos" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Sigla</th>
                            <th>Nome</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @initial_show.each do |o|%>
                            <tr>
                                <td><%= o.id %></td>
                                <td><%= o.initial %></td>
                                <td><%= o.name %></td>
                                <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'initials', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'initials', :action => 'destroy', :id => o.id}, :data => {:confirm=>'Deseja realmente remover este registro?'},  class: 'btn btn-danger', method: :delete %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
        </div>
        <div class="box-footer">
        </div>
    </div>
</section>
