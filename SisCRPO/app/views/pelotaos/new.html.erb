<section class="content-header">
    <h1>
        Gerenciamento de Pelotão
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Gerenciamento de Pelotão</li>
    </ol>
</section>
<section class="content">
  <div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title">Cadastro de Pelotão</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      </div>
    </div>
    <div class="error"><%= flash[:error] %></div>
    <% if @pelotao.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
           O formulário contém <%= pluralize(@pelotao.errors.count, "erro") %>.
        </div>
        <ul>
         <% @pelotao.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for @pelotao do |f| %>
      <div class="box-body">
        <div class="form-group col-md-12">
          <div class="form-group col-md-2">
            <%= f.label :nome %>
            <%= f.text_field :nome, placeholder: "Nome", maxlength: "15", class:"form-control" %>
          </div>
          <div class="form-group col-md-5">
            <%= f.label :cidade %>
            <%= f.select :cidade, options_for_select(@select_cidades), {}, class: "form-control" %>
          </div>
        </div>
        <div class="form-group col-md-12">
         <div class="form-group col-md-5">
            <label>GPM</label>
            <%= f.select :gpm_id, options_for_select(@select_gpms), {}, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <%= f.submit "Salvar", class: "btn btn-success" %>
        <%= f.button "Limpar", class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Consultar Pelotão</h3>
                        <div class="box-tools pull-right">
                          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                      <% if @pelotao_show.count < 1 %>
                        <tr><td>Não existem Pelotões cadastrados.</td></tr>
                      <% else %>
                        <table id="motivos" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nome</th>
                                    <th>Cidade</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @pelotao_show.each do |o|%>
                                <tr>
                                    <td><%= o.id %></td>
                                    <td><%= o.nome %></td>
                                    <%if o.cidade == 0%>
                                      <td>Caxias do Sul</td>
                                    <% elsif o.cidade == 1%>
                                      <td>Passo Fundo</td>
                                    <% else %>
                                      <td>Vacaria</td>
                                    <% end %>
                                    <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'pelotaos', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                    <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'pelotaos', :action => 'destroy', :id => o.id}, class: 'btn btn-danger', method: :delete %></td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        <% end %>
                    </div>
                </div>
            </section>
