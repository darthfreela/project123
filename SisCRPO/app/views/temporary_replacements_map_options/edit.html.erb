<section class="content">
  <div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title">Editar Parâmetros do Mapa de Substituição Temporária</h3>
  </div>

  <!--INICIO form-->
  <div class="alert-error">
      <%= flash[:error] %>
      <% if @parameter.errors.any? %>
      <div id="error_explanation">
          <div class="alert-error">
            O formulário contém <%= pluralize(@parameter.errors.count, "erro") %>.
        </div>
        <ul>
            <% @parameter.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>

<%= form_for @parameter do |f| %>
<div class="box-body">
    <div class="row">
      <div class="form-group col-md-5">
          <label>Nome do Diretor*</label>
          <%= f.text_field :director_tag, placeholder: "Nome do diretor do DA/DF", class:"form-control" , :validation => "required" %>
      </div>
      <div class="form-group col-md-5">
          <label>OPM*</label>
          <%= f.text_field :opm_tag, placeholder: "Nome da OPM", maxlength: "15", class:"form-control" , :validation => "required" %>
      </div>
  </div>
  <div class="row">
      <div class="form-group col-md-5">
          <label>Telefone da OPM</label>
          <%= f.text_field :opm_telephone_tag, placeholder: "Telefone da OPM", maxlength: "15", class:"form-control" , :validation => "required" %>
      </div>
      <div class="form-group col-md-5">
          <label>Centro de Custo*</label>
          <%= f.date_field :cost_center_tag, class:"form-control", :validation => "required" %>
      </div>
  </div>

</div>
<div class="box-footer">
    <%= f.submit "Salvar", class: "btn btn-success" %>
</div>
<% end %>
</div>
<!--FIM form-->

</div>
</section>