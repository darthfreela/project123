<section class="content-header">
    <h1>
        Importar Boletim
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Importar Boletim</li>
    </ol>
</section>
<section class="content">
    <div class="box collapsed-box">
        <div class="box-header">
            <h3 class="box-title">Importação de Boletim</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
            </div>
        </div>
        <hr>
        <div class="alert-error">
            <%= flash[:error] %>
          <% if @importedFile.errors.any? %>
            <div id="error_explanation">
                O formulário contém <%= pluralize(@importedFile.errors.count, "erro") %>.
            </div>
            <ul>
                <% @importedFile.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_for @importedFile , :multipart => true do |f| %>
            <div class="box-body">
                <div class="form-group col-md-17">

                <div class="form-group col-md-17">
                    <label>Selecione o Arquivo*</label>
                    <%= f.file_field :imported_file_path %>
                </div>
            </div>
            <div class="box-footer">
                <%= f.submit "Importar", Class: "btn btn-success" %>
                <%= f.button "Cancelar", Class: "btn btn-danger" %>
                <div class=" small pull-right">
               <div> <%= @tabela.bulletin_date %></div>
               <div> <%= @tabela.title %></div>

                * Campos obrigatórios</div>
            </div>
        <% end %>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Listar </h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></but>
            </div>
        </div>
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                </span>
            </div>
        </div>
        <hr>
        <div class="box-body">
        <% if @importedFile_show.count <= 0 %>
                        <tr><td>Não existem Boletins cadastrados.</td></tr>
        <% else %>
            <table id="motivos" class="table table-bordered table-striped">
                <thead>
                        <tr>
                            <th>ID</th>
                            <th>Id Func</th>
                            <th>Nome</th>
                            <th>Posto / Graduação</th>
                            <th>Boletim</th>
                            <th>Data</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @importedFile_show.each do |o|%>
                            <% if o.id >= 0 %>
                                <tr>
                                    <td><%= o.id %></td>
                                    <td><%= o.user_id %></td>


                                    <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'imported_files', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                    <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'imported_files', :action => 'destroy', :id => o.id},  :data => {:confirm=>'Deseja realmente remover este boletim?'} , class: 'btn btn-danger', method: :delete %></td>
                                </tr>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
            </div>
        <div class="box-footer"></div>
    </div>
</section>