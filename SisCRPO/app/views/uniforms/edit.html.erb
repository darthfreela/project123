<section class="content">
  <div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title">Cadastro de Uniforme</h3>
    </div>
    <% if @uniform.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
           O formulário contém <%= pluralize(@uniform.errors.count, "erro") %>.
        </div>
        <ul>
         <% @uniform.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for @uniform do |f| %>
      <div class="box-body">
        <div class="form-group col-md-12">
          <div class="form-group col-md-2">
            <%= f.label :sigla %>
            <%= f.text_field :sigla, maxlength: "6", class:"form-control" %>
          </div>
          <div class="form-group col-md-5">
            <%= f.label :nome_do_uniforme %>
            <%= f.text_field :uniforme, class:"form-control" %>
          </div>
          <div class="form-group col-md-5">
            <%= f.label :descricao_para_o_uniforme %>
            <%= f.text_area :descricao, class: "form-control", size: "24x6" %>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <%= f.submit "Salvar", class: "btn btn-success" %>
        <%= f.button "Limpar", class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</section>
