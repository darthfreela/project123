<section class="content-header">
    <h1>Gerenciamento Tipo de Serviço
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Gerenciamento Tipo de Serviço</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Cadastro Tipo de Serviço</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <hr>
        <div class="alert-error">
            <%= flash[:error] %>
            <% if @tpServico.errors.any? %>
                <div id="error_explanation">
                    O formulário contém <%= pluralize(@tpServico.errors.count, "erro") %>.
                </div>
                <ul>
                    <% @tpServico.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
        <%= form_for @tpServico do |f| %>
            <div class="box-body">
                <div class="col-md-2 form-group ">
                    <label>Sigla</label>
                    <%= f.text_field :sigla, PlaceHolder: "Sigla", maxlength: "5", class:"form-control" %>
                </div>
                <div class="col-md-8 form-group ">
                    <label>Nome do Serviço</label>
                    <%= f.text_field :nome, PlaceHolder: "Nome", maxlength: "80", class:"form-control" %>
                </div>
                <div class="col-md-4 form-group">
                    <label>Função</label>
                    <%= f.select :idFuncao, options_for_select(@select_funcao), {}, class: "form-control" %>
                </div>
                <div class="col-md-4 form-group">
                    <label>Uniformes</label>
                    <%= f.select :idUniformes, options_for_select(@select_uniformes), {}, class: "form-control select2", multiple: "multiple" %>
                </div>
                <div class="col-md-2 form-group">
                    <label>Ativo</label>
                    <%= f.select :ativo, [['Sim', 'true'], ['Não', 'false']],{}, class: "form-control" %>
                </div>
            </div>
            <div class="box-footer">
                <%= f.submit "Salvar", class: "btn btn-success"%>
                <%= f.button "Limpar", class: "btn btn-danger"%>
            </div>
        <% end %>
    </div>
</section>
