<section class="content-header">
    <h1>Gerenciamento Tipo de Serviço
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Gerenciamento Tipo de Serviço</li>
    </ol>
</section>
<section class="content">
    <div class="box collapsed-box">
        <div class="box-header">
            <h3 class="box-title">Cadastro Tipo de Serviço</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
            </div>
        </div>
        <hr>
        <%= render 'form' %>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Listar Tipo de Serviço</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                </span>
            </div>
        </div>
        <hr>
        <div class="box-body">
            <% if @tpServico_show.count < 1%>
                Não existem tipos de serviços cadastrados.
            <% else %>
                <table id="motivos" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Sigla</th>
                            <th>Nome</th>
                            <th>Função</th>
                            <th>Uniforme</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @tpServico_show.each do |o|%>
                            <tr>
                                <%  u = Uniform.find(o.uniform_id)
                                        f = Function.find(o.function_id)
                                %>
                                <td><%= o.id %></td>
                                <td><%= o.initials %></td>
                                <td><%= o.name %></td>
                                <td><%= f.name %></td>
                                <td><%= u.name %></td>
                                <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'service_types', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'service_types', :action => 'destroy', :id => o.id},:data => {:confirm=> "Tem certeza que deseja remover este registro?"}, class: 'btn btn-danger', method: :delete %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
        </div>
        <div class="box-footer">
        </div>
    </div>
</section>
