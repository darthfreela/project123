<section class="content">
  <div class="box box-default collapsed-box">
    <div class="box-header with-border">
      <h3 class="box-title">Cadastro de Posto/Graduação</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
      </div>
    </div>
    <% if @postograduacao.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
           O formulário contém <%= pluralize(@postograduacao.errors.count, "erro") %>.
        </div>
        <ul>
         <% @postograduacao.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for @postograduacao do |f| %>
      <div class="box-body">
        <div class="form-group col-md-12">
          <div class="form-group col-md-2">
            <%= f.label :sigla %>
            <%= f.text_field :sigla, placeholder: "Sigla", maxlength: "6", class:"form-control" %>
          </div>
          <div class="form-group col-md-5">
            <%= f.label :nomePostoGraduacao %>
            <%= f.text_field :nomePostoGraduacao, placeholder: "Nome do Posto/Graduação", class:"form-control" %>
          </div>
          <div class="form-group col-md-5">
            <%= f.label :ativo %>
            <%= f.select :ativo,[["Ativo", true],["Desativado", false]],{}, class:"form-control" %>
          </div>
        </div>

      </div>
      <div class="box-footer">
        <%= f.submit "Salvar", class: "btn btn-success" %>
        <%= f.button "Limpar", class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Consultar Posto/Graduação</h3>
                        <div class="box-tools pull-right">
                          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                      <% if @postograduacao_show.count < 1 %>
                        <tr><td>Não existem Posto/Graduação cadastrados.</td></tr>
                      <% else %>
                        <table id="motivos" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Sigla</th>
                                    <th>Nome Posto/Graduação</th>
                                     <th>Ativo</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @postograduacao_show.each do |o|%>
                                <tr>
                                    <td><%= o.id %></td>
                                    <td><%= o.sigla %></td>
                                    <td><%= o.nomePostoGraduacao %></td>
                                    <%if o.ativo == false%>
                                      <td>Desativado</td>
                                    <% elsif o.ativo == true%>
                                      <td>Ativado</td>
                                    <% end %>
                                    <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'postograduacaos', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                    <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'postograduacaos', :action => 'destroy', :id => o.id}, class: 'btn btn-danger', method: :delete %></td>
                                </tr>
                              <% end %>
                            </tbody>
                        </table>
                         <% end %>
                    </div>
                </div>
            </section>

