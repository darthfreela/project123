<div class="alert-error">
  <%= flash[:error] %>
  <% if @instruction_bulletins.errors.any? %>
    <div id="error_explanation">
      O formulário contém <%= pluralize(@instruction_bulletins.errors.count, "erro") %>.
    </div>
    <ul>
      <% @instruction_bulletins.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<%= form_for @instruction_bulletins do |f| %>
  <div class="box-body">
    <div class="row">
      <div class="form-group col-md-3">
        <label>Id Func. *</label>
        <%= f.text_field @id_func, value: "", class: "form-control number" , 
                  data: {
                      :validation => "required",
                      "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
      <div class="form-group col-md-9">
        <label>Nome</label>
        <%= f.text_field @id_func, value: "", placeholder:"Nome" ,class: "form-control number" , 
                  data: {
                      :validation => "required",
                      "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <label>Data Inicial *</label>
        <%= f.text_field :date_begin, class:"form-control data" , 
                  data: {
                      :validation => "required",
                      "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
      <div class="col-md-3 form-group ">
          <label>Data Final *</label>
          <%= f.text_field :date_end, class: "form-control data" , 
                  data: {
                      :validation => "required",
                      "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <%= f.submit "Salvar", class: "btn btn-success" %>
    <% if @botao == 'edit' %>
      <a href="javascript:history.back()" class="btn btn-danger">Voltar</a>
    <% else %>
      <input name="limpar" value="Limpar" class="btn btn-danger" type="reset">
    <% end %>
    <div class=" small pull-right">* Campos obrigatórios</div>
  </div>
<% end %> 