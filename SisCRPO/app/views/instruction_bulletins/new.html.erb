<section class="content-header">
    <h1>
        Gerenciamento de Boletim de Instrução
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Gerenciamento de Boletim de Instrução<li>
    </ol>
</section>
<section class="content">
  <div class="box box-default collapsed-box">
    <div class="box-header with-border">
      <h3 class="box-title">Cadastro de Boletim de Instrução</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
      </div>
    </div>
    <%= render 'form' %>
  </div>
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Consultar Boletim de Instrução</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <% if @instruction_bulletins_show.count < 1 %>
        Não existem Boletim de instrução cadastrados.
      <% else %>
        <table id="motivos" class="table table-bordered table-striped">
          <thead>
            <tr>
            <th></th>
            <th>Id Func.</th>
            <th>Nome Func.</th>
            <th></th>
            <th></th>
            </tr>
          </thead>
          <tbody>
            <% @instruction_bulletins_show.each do |o|%>
              <tr>
                <td><%= o.id %></td>                
                <% @users.each do |u| %>
                  <% if o.user_id== u.id %>
                    <td><%= o.id_func %></td>
                    <td><%= u.name %></td>
                  <% end %>
                <% end %>
                <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'instruction_bulletins', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'instruction_bulletins', :action => 'destroy', :id => o.id}, :data => {:confirm=>'Deseja realmente remover este registro?'},  class: 'btn btn-danger', method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</section>
