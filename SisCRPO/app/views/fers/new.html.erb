<section class="content-header">
    <h1>
        Solicitação de férias
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Solicitação de férias</li>
    </ol>
</section>
<section class="content">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Solicitação de férias</h3>
                    </div>
        <div class="error"><%= flash[:error] %></div>
        <% if @fer.errors.any? %>
        <div id="error_explanation">
            <div class="alert-error">
                O formulário contém <%= pluralize(@fer.errors.count, "erro") %>.
            </div>
            <ul>
                <% @fer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <%= form_for @fer do |f| %>
    <%= f.hidden_field :aprovado, value: 'false' %>
                        <div class="box-body">
                            <div class="bs-example">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Id Func</label>
                                        <%= f.text_field :idFunc, PlaceHolder: "ID func", class:"form-control" %>
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label>Posto/Graduação Nome Servidor</label>
                                        <%= f.text_field :idFunc,  class:"form-control", disabled:"true" %>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Data Inicial</label>
                                        <%= f.text_field :dataInicial, PlaceHolder: "01/01/2000", class:"form-control" %>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Data Final</label>
                                        <%= f.text_field :dataFinal, PlaceHolder: "01/01/2000", class:"form-control" %>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Dias</label>
                                        <input type="number" placeholder="0" class="form-control" disabled/>
                                    </div>
                                </div>
                                </div>
                                </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success" onclick="window.location = '../../pages/cadastroInformativo/listaInformativos.php'">Salvar</button>
                            <button type="close" class="btn btn-danger" onclick="window.location = '../../pages/cadastroInformativo/listaInformativos.php'">Cancelar</button>
                        </div>
                    <% end %>
                </div>
                <!-- /.box -->
            </section>
