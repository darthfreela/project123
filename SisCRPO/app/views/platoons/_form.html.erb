<div class="alert-error">
  <%= flash[:error] %>
  <% if @platoon.errors.any? %>
      <div id="error_explanation">
          O formulário contém <%= pluralize(@platoon.errors.count, "erro") %>.
      </div>
      <ul>
          <% @platoon.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>  
      </ul>
  <% end %>
</div>
<%= form_for @platoon do |f| %>
  <div class="box-body">
    <div class="row">
      <div class="form-group col-md-12">
        <label>Nome *</label>
        <%= f.text_field :name, placeholder: "Nome", maxlength: "15", class:"form-control" , 
                    data: {
                        :validation => "required",
                        "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5 form-group ">
          <label>Cidade *</label>
          <%= f.select :city_id, @select_cities.map{ |s| [s.name, s.id]}, {:include_blank => 'Selecionar'}, class: "form-control select2" , 
                    data: {
                        :validation => "required",
                        "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
      <div class="form-group col-md-5">
        <label>GPM *</label>
          <%= f.select :gpm_id, @select_gpms.map{ |s| [s.name, s.id] }, {:include_blank => 'Selecionar'}, class: "form-control select2" , 
                    data: {
                        :validation => "required",
                        "validation-error-msg" => "Este campo é obrigatorio." } %>
      </div>
    </div>
  </div>
  <div class="box-footer">
  
    <%= f.submit "Salvar", class: "btn btn-success" %>
    <% if @botao == 'edit' %>
      <a href="javascript:history.back()" class="btn btn-danger">Voltar</a>
    <% else %>
      <input name="limpar" value="Limpar" class="btn btn-danger" type="reset">
    <% end %>
    <div class=" small pull-right">* Campos obrigatórios</div>
  </div>  
  </script>
<% end %>