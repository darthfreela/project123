<div class="alert-error">
  <%= flash[:error] %>
  <% if @platoon.errors.any? %>
      <div id="error_explanation">
          O formulário contém <%= pluralize(@platoon.errors.count, "erro") %>.
      </div>
      <ul>
          <% @platoon.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>  
      </ul>
  <% end %>
</div>
<%= form_for @platoon do |f| %>
  <div class="box-body">
    <div class="form-group col-md-12">
      <label>Nome</label>
      <%= f.text_field :name, placeholder: "Nome", maxlength: "15", class:"form-control" %>
    </div>
    <div class="col-md-5 form-group ">
        <label>Cidade</label>
        <%= f.select :city_id, @select_city.map{ |s| [s.name, s.id]}, {}, class: "form-control select2" %>
    </div>
    <div class="form-group col-md-5">
      <label>GPM</label>
        <%= f.select :gpm_id, @select_gpms.map{ |s| [s.name, s.id] }, {}, class: "form-control select2" %>
    </div>
  </div>
  <div class="box-footer">
    <%= f.submit "Salvar", class: "btn btn-success" %>
    <%= f.button "Limpar", class: "btn btn-danger" %>
  </div>  
  </script>
<% end %>