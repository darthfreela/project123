<section class="content-header">
    <h1>
        Gerenciamento de Férias
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active"> Gerenciamento de Férias</li>
    </ol>
</section>
<section class="content">
    <div class="box box-default collapsed-box">
        <div class="box-header with-border">
            <h3 class="box-title">Lançamento de Férias</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
            </div>
        </div>
        <%= render 'form' %>
    </div>
    <div class="box box-default">
        <div class="box-header">
            <h3 class="box-title">Lista de Lançamento de Férias</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="input-group margin">
                <input class="form-control" type="text" placeholder="Pesquisar">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                </span>
            </div>
            <% if @lancamento_ferias_show.count < 1 %>
                Não existem Estagiários cadastrados.
            <% else %>
                <table id="motivos" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Data de Inicio</th>
                            <th>Data de Término</th>
                            <th>Aprovado</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @lancamento_ferias_show.each do |e|%>
                            <tr>
                                <td><%= e.id %></td>
                                <td><%= data_br e.date_begin %></td>
                                <td><%= data_br e.date_end %></td>
                                <td>-</td>
                                <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'request_vacations', :action => 'edit', :id => e.id}, class: 'btn btn-warning', method: :get %></td>
                                <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'request_vacations', :action => 'destroy', :id => e.id}, :data => {:confirm=>'Deseja realmente remover este registro?'},  class: 'btn btn-danger', method: :delete %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
        </div>
    </div>
</section>