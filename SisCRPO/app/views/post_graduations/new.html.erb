<section class="content-header">
    <h1>
        Gerenciamento de Posto/Graduação
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Gerenciamento de Posto/Graduação</li>
    </ol>
</section>
<section class="content">
  <div class="box box-default collapsed-box">
    <div class="box-header with-border">
      <h3 class="box-title">Cadastro de Posto/Graduação</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse">
          <i class="fa fa-plus"></i>
        </button>
      </div>
    </div>
    <% if @post_graduation.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
          O formulário contém <%= pluralize(@post_graduation.errors.count, "erro") %>.
        </div>
        <ul>
          <% @post_graduation.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= render 'form' %>
  </div>
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Consultar Posto/Graduação</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse">
          <i class="fa fa-minus"></i>
        </button>
      </div>
    </div>
    <div class="box-body">
      <% if @post_graduation_show.count < 1 %>
        Não existem Posto/Graduação cadastrados.
      <% else %>
        <table class="table table-bordered table-striped dataTable">
          <thead>
            <tr>
              <th></th>
              <th>Sigla</th>
              <th>Nome Posto/Graduação</th>
              <th>Ativo</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @post_graduation_show.each do |o|%>
            <tr>
              <td><%= o.id %></td>
              <td><%= o.initials %></td>
              <td><%= o.name %></td>
              <%if o.active == false%>
                <td>Desativado</td>
              <% elsif o.active == true%>
                <td>Ativado</td>
              <% end %>
              <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'post_graduations', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
              <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'post_graduations', :action => 'destroy', :id => o.id}, :data => {:confirm => 'Realmente deseja excluir esse registro?'} ,class: 'btn btn-danger', method: :delete %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</section>

