<section class="content-header">
    <h1>
       Quadro de Efetivo
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Quadro de Efetivo</li>
    </ol>
</section>
<section class="content">
  <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Quadro de Efetivo</h3>
                        <div class="box-tools pull-right">
                          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                      <%# if @opm_show.count < 2 %>
                        <tr><td>Não existem OPMs cadastradas.</td></tr>
                      <%# else %>
                        <table id="motivos" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nome</th>
                                    <th>Cidade</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                              <%# @opm_show.each do |o|%>
                                <tr>
                                    <td><%#= o.id %></td>
                                    <td><%#= o.sigla %></td>
                                    <% #if o.cidade == 0%>
                                      <td>Caxias do Sul</td>
                                    <%# elsif o.cidade == 1%>
                                      <td>Passo Fundo</td>
                                    <%# else %>
                                      <td>Vacaria</td>
                                    <%# end %>
                                    <td><%#= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'opms', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                    <td><%#= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'opms', :action => 'destroy', :id => o.id}, class: 'btn btn-danger', method: :delete %></td>
                                </tr>
                              <%# end %>
                            </tbody>
                          </table>
                        <%# end %>
                    </div>
                </div>
</section>
