<section class="content-header">
              <h1>
                Aprovação de Indisponibilidade e Afastamento
              </h1>
              <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Ferramentas do usuário</a></li>
                <li class="active">Aprovação de Indisponibilidade e Afastamento (RH)</li>
              </ol>
</section>
<section class="content">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Aprovar Indisponibilidade
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="input-group margin">
                            <input class="form-control" type="text" placeholder="Pesquisar">
                                <span class="input-group-btn">
                                <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                                </span>
                        </div>
                        <% if @licencas.count < 1 %>
            <tr><td>Não existem solicitações pendentes.</td></tr>
            <% else %>
                        <table id="motivos" class="table table-bordered table-striped">
                            <thead>
                                    <tr>
                                        <th></th>
                                        <th>Id Func.</th>
                                        <th>Nome do Servidor</th>
                                        <th>Posto Grad.</th>
                                        <th>Função Exercida</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            <tbody>
                            <% @licencas.each do |e|%>
                                <tr>
                                    <td><%= e.id %>4</td>
                                    <td><%= e.idFunc %>321</td>
                                    <td><%= e.nome %>asd</td>
                                    <td><%= e.nome %>PG</td>
                                    <td><%= e.nome %>Clóvis</td>
                                    <td><%= link_to raw("<i class='fa fa-check-square-o  '>Visualizar</i>"), {:controller => 'approval_unavailability_and_removals', :action => 'view_request', :id => e.id}, class: 'btn btn-success', method: :get %></td>
                                </tr>
                               <% end %>
                            </tbody>
                        </table>
                        <% end %>
                    </div>
                </div>
            </section>