
<section class="content-header">
    <h1>
        Gerenciamento de Companhia
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Gerenciamento de Companhia</li>
    </ol>
</section>
<section class="content">
    <div class="box collapsed-box">
        <div class="box-header">
            <h3 class="box-title">Cadastro de Companhia</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
            </div>
        </div>
        <hr>
        <div class="alert-error">
            <%= flash[:error] %>
          <% if @company.errors.any? %>
            <div id="error_explanation">
                O formulário contém <%= pluralize(@company.errors.count, "erro") %>.
            </div>
            <ul>
                <% @company.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_for @company do |f| %>
            <div class="box-body">
            	<div class="form-group col-md-12">
                <div class="form-group col-md-8">
                    <!--<%= f.label :cidade %>-->
                    <label>Cidade</label>
                    <%= f.select :cidade, options_for_select(@select_cidades),{}, class: "form-control" %>
                </div>
                <div class="form-group col-md-8">
				            <!--<%= f.label :nome %>-->
                    <label>Nome</label>
                    <%= f.text_field :nome, PlaceHolder: "Nome Completo", maxlength: "80", class:"form-control" %>
                </div>
                <div class="form-group col-md-8">
                    <!--<%= f.label :unidade %>-->
                    <label>Unidade</label>
                    <%= f.select :unidade, options_for_select(@select_unidades),{}, class: "form-control" %>
                </div>
                <div class="form-group col-md-5">
				            <!--<%= f.label :ativo %>-->
                    <label>Ativo:</label>
                    <%= f.select :ativo, [['Sim', 'true'], ['Não', 'false']],{}, class: "form-control" %>
                </div>
                </div>
            </div>
            <div class="box-footer">
                <%= f.submit "Salvar", Class: "btn btn-success" %>
                <%= f.button "Limpar", Class: "btn btn-danger" %>
            </div>
        <% end %>
    </div>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Listar Companhias</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></but>
            </div>
        </div>
        <div class="box-body">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">Pesquisar</button>
                </span>
            </div>
        </div>
        <hr>
        <div class="box-body">
        <% if @company_show.count <= 0 %>
                        <tr><td>Não existem companhias cadastradas.</td></tr>
        <% else %>
            <table id="motivos" class="table table-bordered table-striped">
                <thead>
                        <tr>
                            <th>Cidade</th>
                            <th>Nome</th>
                            <th>Unidade</th>
                            <th>Ativo</th>
                            <th>Sexo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @company_show.each do |o|%>
                            <% if o.id >= 0 %>
                                <tr>
                                    <td><%= o.cidade %></td>
                                    <td><%= o.nome %></td>
                                    <td><%= o.unidade %></td>
                                    <td><%= o.ativo %></td>
                                    <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'companies', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                    <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"), {:controller => 'companies', :action => 'destroy', :id => o.id},  :data => {:confirm=>'Deseja realmente remover este campo?'} , class: 'btn btn-danger', method: :delete %></td>
                                </tr>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
            </div>
        <div class="box-footer"></div>
    </div>
</section>
