<section class="content">
	<div class="box box-primary">
		<div class="box-header with-border">
			<h3 class="box-title">Cadastro de Companhia</h3>
		</div>
		<div class="error"><%= flash[:error] %></div>
		<% if @gpm.errors.any? %>
		<div id="error_explanation">
			<div class="alert-error">
				O formulário contém <%= pluralize(@gpm.errors.count, "erro") %>.
			</div>
			<ul>
				<% @gpm.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<%= form_for @gpm do |g| %>
			<div class="box-body">
				<div class="bs-example">
					<div class="col-md-12">
						<div class="form-group col-md-3">
							<label>Cidade</label>
							<%= g.select :cidade, [['Caxias do Sul', '1'], ['São Marcos', '2']],{}, class: "form-control" %>
						</div>
						<div class="form-group col-md-6">
							<label for="sigla">Nome</label>
							<%= g.text_field :nome, PlaceHolder: "Nome companhia", class:"form-control" %>
						</div>
					</div>
					<div class="form-group col-md-12">
						<div class="form-group col-md-3">
							<label>Unidade</label>
							<%= g.select :opm_id, [['Caxias do Sul - Parque Getúlio Vargas', '1'], ['Caxias do Sul - Cruzeiro', '2'], ['Caxias do Sul - Cruzeiro', '3']],{}, class: "form-control" %>
						</div>
						<div class="form-group col-md-2">
							<label for="ativo select2">Ativo</label>
							<%= g.select :ativo, [['Sim', 'true'], ['Não', 'false']],{}, class: "form-control" %>
						</div>
						<div class="form-group col-md-4">
							<label for="sigla">Sigla</label>
							<%= g.text_field :sigla, PlaceHolder: "Sigla da companhia", class:"form-control" %>
						</div>
					</div>
				</div>
			</div>
			<div class="box-footer">
				<%= g.submit "Salvar", Class: "btn btn-success" %>
				<%= g.button "Limpar", Class: "btn btn-danger" %>
			</div>
		<% end %>
	</div>
</section>