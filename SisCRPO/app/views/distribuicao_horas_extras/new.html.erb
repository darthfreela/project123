<section class="content-header">
    <h1>
        Distribuição Hora Extra
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Ferramentas do usuário</a></li>
        <li class="active">Distribuição de Hora Extra</li>
    </ol>
</section>
<section class="content">
  <div class="box collapsed-box">
    <div class="box-header with-border">
      <h3 class="box-title">Cadastro de Distribuição de Hora Extra</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
      </div>
    </div>
    <div class="error"><%= flash[:error] %></div>
    <% if @distribuicaohorasextra.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
           O formulário contém <%= pluralize(@distribuicaohorasextra.errors.count, "erro") %>.
        </div>
        <ul>
         <% @distribuicaohorasextra.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for @distribuicaohorasextra do |f| %>
      <div class="box-body">
        <div class="form-group col-md-12">
          <div class="form-group col-md-2">
            <label>Id Unidade*</label>
            <%= f.text_field :idUnidade, placeholder: "ID Unidade", maxlength: "11", class:"form-control" %>
          </div>
          <div class="form-group col-md-5">
            <label>Unidade</label>
            <%= f.text_field :unidade, placeholder: "Nome Unidade", maxlength: "80",class:"form-control" %>
          </div>
          <div class="form-group col-md-2">
            <label>Cidade</label>
           <%= f.select :cidade, [[' ', '0'], ['Passo Fundo', '1'], ['Vacaria', '2'],['Caxias do Sul', '3']],{}, class: "form-control select2" %>
          </div>
          </div>
          <div class="form-group col-md-12">
          <div class="form-group col-md-2">
            <label>Número de horas*</label>
            <%= f.text_field :numeroDeHoras, placeholder: "Número de  Horas", class:"form-control" %>
          </div>
               <div class="form-group col-md-2">
            <label>Data Início*</label>
            <%=f.text_field :dataInicio, placeholder: "Data Inicio", class:"form-control data" %>
          </div>
          <div class="form-group col-md-2">
            <label>Data Término*</label>
            <%= f.text_field :dataTermino, placeholder: "Data Término", class:"form-control data" %>
          </div>
      </div>
      <div class="box-footer">
        <%= f.submit "Salvar", class: "btn btn-success" %>
        <%= f.button "Limpar", class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
  </div>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Consultar Distribuição de Hora Extra</h3>
                        <div class="box-tools pull-right">
                          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                      <% if @distribuicaohorasextra_show.count < 1 %>
                        <tr><td>Não existem Distribuição de Hora Extra cadastradas.</td></tr>
                      <% else %>
                        <table id="motivos" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id Unidade</th>
                                    <th>Unidade</th>
                                     <th>Cidade</th>
                                     <th>Horas</th>
                                     <th>Data Inicio</th>
                                     <th>Data Término</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @distribuicaohorasextra_show.each do |o|%>
                                <tr>
                                    <td><%= o.id %></td>
                                    <td><%= o.idUnidade %></td>
                                    <td><%= o.unidade %></td>
                                    <%if o.cidade == 0%>
                                      <td>Caxias do Sul</td>
                                    <% elsif o.cidade == 1%>
                                      <td>Passo Fundo</td>
                                    <% else %>
                                      <td>Vacaria</td>
                                    <% end %>
                                    <td><%= o.numeroDeHoras %></td>
                                    <td><%= data_br o.dataInicio %></td>
                                    <td><%= data_br  o.dataTermino %></td>
                                    <td><%= link_to raw("<i class='fa fa-edit'>Editar</i>"), {:controller => 'distribuicao_horas_extras', :action => 'edit', :id => o.id}, class: 'btn btn-warning', method: :get %></td>
                                    <td><%= link_to raw("<i class='fa fa-close'>Remover</i>"),{:controller => 'distribuicao_horas_extras', :action => 'destroy', :id => o.id}, :data => {:confirm => "Realmente deseja excluir este registro?"},class: 'btn btn-danger', method: :delete %></td>
                                    </tr>
                              <% end %>
                            </tbody>
                          </table>
                        <% end %>
                    </div>
                </div>
            </section>