<section class="content">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cadastro de Estagiários</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="error"><%= flash[:error] %></div>
    <% if @estagiario.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
           O formulário contém <%= pluralize(@estagiario.errors.count, "erro") %>.
        </div>
        <ul>
         <% @estagiario.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
        </ul>
      </div>
    <% end %>
                    <%= form_for @estagiario do |f| %>
                        <div class="box-body">
                            <div class="form-group col-md-12">
                                <div class="form-group col-md-5">
                                    <%= f.label :nome %>
                                    <%= f.text_field :nome, placeholder: "Nome", class:"form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <%= f.label :cpf %>
                                    <%= f.text_field :cpf, placeholder: "CPF", maxlength: "12", class:"form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <%= f.label :sexo %>
                                    <%= f.select :sexo, [['Maculino', 'M'], ['Feminino', 'F']],{}, class: "form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <label>Data Nascimento</label>
                                    <%= f.date_field :data_nascimento, class:"form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <label>Semestre</label>
                                    <%= f.select :semestre, [['Primeiro', 1], ['Segundo', 2]],{}, class: "form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <label>Endereço</label>
                                    <%= f.text_field :endereco, PlaceHolder: "Endereço", class:"form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <label>Email</label>
                                    <%= f.email_field :email, PlaceHolder: "email@email.com", maxlength: "80", class:"form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <label>Banco - ag/CC</label>
                                    <%= f.text_field :agcc, PlaceHolder: "banco - agencia/conta", maxlength: "80", class:"form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <label>Dias Trabalhados</label>
                                    <%= f.text_field :dias_trabalhados, PlaceHolder:  "Dias Trabalhados", class:"form-control" %>
                                </div>
                                <div class="form-group col-md-5">
                                    <label for="valeTransporte">Vale Transporte</label>
                                    <%= f.text_field :vale_transporte, PlaceHolder:  "Vale Transporte", class:"form-control" %>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success" onclick="window.location = '../../pages/cadastroSiglas/linhaServico.html'">Salvar</button>
                            <button type="close" class="btn btn-danger" onclick="window.location = '../../pages/cadastroSiglas/linhaServico.html'">Cancelar</button>
                        </div>
                    <% end %>
